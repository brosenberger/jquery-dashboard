<div id="widget-{{id}}" class="widget {{sizeConfiguration}} widget-{{id}}" data-widget-id="{{id}}" style="display:none">
    <div class="panel panel-default">
        <div class="panel-heading">
            {{#block "header"}}{{/block}}
            <i class="fa fa-trash fa-lg pull-right"></i>
            {{#if configurable}}
                <i class="fa fa-cog fa-lg pull-right"></i>
            {{/if}}
            {{#if refreshable}}
                <i class="fa fa-refresh fa-lg pull-right"></i>
            {{/if}}
        </div>
        <div class="panel-additional panel-loading" style="display:none;"><i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i></div>
        <div class="panel-additional panel-notconfigured" style="display:none;"><i class="fa fa-cog fa-pulse fa-3x fa-fw"></i>Bitte konfigurieren</div>
        <div class="panel-body">
            {{#block "content"}}{{/block}}
        </div>
    </div>
</div>